@model Krammatik_Frontend.Models.SignupModel


@{
    ViewBag.Title = "Login";
}  
<div class="form-group">
 @using (Html.BeginForm("SignupMethod", "Signup", FormMethod.Post))
{
   
<div>@Html.LabelFor(model=>model.Username,new{@class="form-label"})
     @Html.TextBoxFor(model=>model.Username,new{@class="form-control",type="email"})
</div>
<div>@Html.LabelFor(model=>model.Password,new{@class="form-label"})
     @Html.TextBoxFor(model=>model.Password,new{@class="form-control",type="password"})
</div>
<button  class="btn btn-primary" type="submit"> Signup</button> 
}</div>
